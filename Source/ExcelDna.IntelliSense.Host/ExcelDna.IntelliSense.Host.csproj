<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;net6.0-windows</TargetFrameworks>

    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\assets\exceldna.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net452' ">
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ExcelDna.IntelliSense.Host-AddIn.IntelliSense.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ExcelDna.IntelliSense.Host-AddIn.IntelliSense.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ExcelDna.AddIn" Version="1.6.0-preview2" />
    <PackageReference Include="ExcelDna.Integration" Version="1.6.0-preview2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ExcelDna.IntelliSense\ExcelDna.IntelliSense.csproj" />
  </ItemGroup>

</Project>
